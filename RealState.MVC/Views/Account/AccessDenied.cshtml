@using System.Security.Claims
@using RealState.Application.Enums
@inject IHttpContextAccessor httpContextAccessor;
@{
	var roles = httpContextAccessor.HttpContext.User.Claims.Where(x=>x.Type == ClaimTypes.Role).Select(x=>x.Value).ToList();
	string controller = string.Empty;
	if (roles.Contains(RoleTypes.Admin.ToString()))
	{
		controller = RoleTypes.Admin.ToString();
	}
	else if (roles.Contains(RoleTypes.Client.ToString()))
	{
		controller = RoleTypes.Client.ToString();
	}
	else if (roles.Contains(RoleTypes.StateAgent.ToString()))
	{
		controller = RoleTypes.StateAgent.ToString();
	}
	else
	{
		controller = "Home";
	}
}

<div class="container">
	<div class="w40">
		<div class="card">
			<div class="card-header">
				<div class="d-flex justify-content-between">
					<h5>Access Denied</h5>
				</div>
			</div>
			<div class="card-body">
				<div class="d-flex justify-content-center alert alert-danger" role="alert">
					<a asp-controller="@controller" asp-action="Index" class="btn btn-primary">Home</a>
				</div>
			</div>
		</div>
	</div>
</div>