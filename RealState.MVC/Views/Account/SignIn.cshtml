@using RealState.Application.ViewModel.Account
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<div class="section-picture">
    <div class="section-form">
        <form id="registerForm" asp-controller="Account" asp-action="SignIn" method="post">
            <h2>Sign In</h2>
            <hr />
            @Html.HiddenFor(m => m.ReturnUrl)
              <div class="form-group">
                <label asp-for="Account" class="form-label">Username or Email</label>
                <input asp-for="Account" class="form-control" placeholder="userName or Email" aria-required="true" type="text" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label" for="Input_Password">Password</label>
                <input asp-for="Password" class="form-control" aria-required="true" placeholder="password" type="password" />
                <span asp-validation-for="Password" class="text-danger field-validation-valid" data-valmsg-for="Input.Password" data-valmsg-replace="true"></span>
               <div class="mt-2 end-line">  
                   <p><a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a></p>
               </div>

            </div>

            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
            <p>OR</p>
            <div>
               <a class="btn btn-secondary" asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </form>
    </div>

    <div class="image" >
      <img src="~/pictures/building1.jpg" />
    </div>
</div>
