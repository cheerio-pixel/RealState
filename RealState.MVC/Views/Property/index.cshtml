
@{
    Layout = "~/Views/Shared/_layoutproperty.cshtml";
}

<!--
    En la pantalla inicial de este mantenimiento debemos tener un listado con todas las
propiedades creadas por el agente que está logueado, de las propiedades se debe
mostrar las misma informaciones que en el home, aparte de mostrar esta
información de cada propiedad se debe tener un botón para editarla y otro para
eliminarla.
--name
--description
--price
--meters
--rooms
--bathrooms
--salesType
--image

-->
<div class="property-container">

    <a href="/Property/Create" class="create-card">
        <i class="fa fa-plus"></i> 
    </a>



     <div class="card-house">
    <div class="header-house">
        <img src="https://i.pinimg.com/originals/b1/15/18/b11518ccfd6295f09f83b7d4baec7cfd.jpg" alt="house" />
    </div>

    <div class="description-house">
        <div class="title">
            <h2>House in the beach</h2>
            <div class="dropdown">
                <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-ellipsis-v"></i>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="update/id">Update</a></li>
                    <li>
        <form id="form-delete-1">
            <button type="button" class="dropdown-item" onclick="confirmDelete(1)">Delete</button>
        </form>
    </li>
                    
                </ul>
            </div>
        </div>
        <div class="description">
            <p>Beautiful house in the beach, with a great view to the sea, perfect for a family.</p>
        </div>

        <div class="characteristics">
            <div class="tag-house">
                <i class="fa-solid fa-bed"></i>
                <p>3</p>
            </div>
            <div class="tag-house">
                <i class="fa-solid fa-bath"></i>
                <p>2</p>
            </div>
            <div class="tag-house">
                <i class="fa-solid fa-ruler"></i>
                <p>200m2</p>
            </div>
        </div>
    </div>
    <div class="price">
        <p>$200,000</p>
    </div>
</div>



</div>

            <script>
                function confirmDelete(id){
    Swal.fire({
  title: "Estas seguro?",
  text: "Los cambios no podran revertirse!",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Si, eliminalo!"
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire({
      title: "Eliminado!",
      text: "Tu Propiedad ha sido eliminado.",
      icon: "success"
    });
    const form = document.getElementById(`form-delete-${id}`)
    form.submit()
  }
});
}
            </script>